{
  "name": "@polyglot/react",
  "version": "1.0.0",
  "description": "AI-powered automatic translation library for React with intelligent caching and zero-maintenance workflow",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./plugin": {
      "import": "./dist/plugin/index.mjs",
      "require": "./dist/plugin/index.js",
      "types": "./dist/plugin/index.d.ts"
    },
    "./testing": {
      "import": "./dist/testing/index.mjs",
      "require": "./dist/testing/index.js",
      "types": "./dist/testing/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "translation",
    "i18n",
    "internationalization",
    "ai",
    "automatic",
    "localization",
    "l10n",
    "translate",
    "multilingual",
    "google-translate",
    "deepl",
    "aws-translate"
  ],
  "author": "Your Name",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/harrymaurya05/polyglot-react.git"
  },
  "bugs": {
    "url": "https://github.com/harrymaurya05/polyglot-react/issues"
  },
  "homepage": "https://github.com/harrymaurya05/polyglot-react#readme",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "idb": "^8.0.0",
    "fast-glob": "^3.3.2",
    "minimatch": "^9.0.3",
    "@aws-sdk/client-translate": "^3.493.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/parser": "^7.23.9",
    "@babel/traverse": "^7.23.9",
    "@babel/types": "^7.23.9",
    "@types/babel__traverse": "^7.20.5",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^1.2.2"
  }
}
