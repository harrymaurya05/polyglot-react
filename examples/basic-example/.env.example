# Example .env file
# Copy this to .env and add your actual API key

# Polyglot API (Recommended - supports auto-translation)
VITE_POLYGLOT_API_KEY=your_polyglot_api_key_here

# For Google Translate
VITE_TRANSLATE_API_KEY=your_google_api_key_here

# For DeepL (if using)
# VITE_TRANSLATE_API_KEY=your_deepl_api_key_here

# For AWS Translate (if using)
# VITE_AWS_ACCESS_KEY_ID=your_access_key
# VITE_AWS_SECRET_ACCESS_KEY=your_secret_key
# VITE_AWS_REGION=us-east-1

# Optional: Use local Polyglot API server for development
# VITE_POLYGLOT_BASE_URL=http://localhost:8080
